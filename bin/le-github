require "rubygems"
require "date"
require "le-github"

date = DateTime.now - 2
output = "/tmp/output.jpg"

# Import data
LeGithubImporter.at(date)

# Webpage scraping
`phantomjs --local-to-remote-url-access=yes rasterise.js #{date.strftime("%Y-%m-%d")} #{output}`

# Print
LeGithubPrinter.print(output)
